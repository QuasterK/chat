<div class="ui inverted segment">
  <div class="ui inverted secondary pointing menu container">
    <%=link_to "Chat", root_path, :class => "active item"%>
    <a class="item">
      Friends
    </a>
    <% if current_user %>
      <div class="right menu">
        <div class='item' >
          <%=link_to "Hello, #{current_user.nick}", edit_user_path(current_user.id)  %>
        </div>
        <div class="item">
          <%=link_to 'Log out', logout_path, method: :delete, :class => "ui primary button"%>
        </div>  
      </div>
    <% end %>
    <% if !current_user %>
      <div class="right menu">
        <div class="item">
          <%=link_to 'Sign Up', signup_path, :class => "ui primary button"%>
        </div>
        <div class="item">
          <%=link_to 'Log In', login_path, :class => "ui primary button"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
