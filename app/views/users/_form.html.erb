<div class="ui large form">
  <div class="ui stacked segment">
<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="ui left icon input">
      <i class="user icon"></i>
      <%=form.text_field :nick, placeholder: "Nick" %>
    </div>
  </div>

  <div class="field">
    <div class="ui left input">
      <%=form.text_field :name, placeholder: "Name" %>
    </div>
  </div>

  <div class="field">
    <div class="ui left input">
      <%=form.text_field :surname, placeholder: "Surname" %>
    </div>
  </div>

  <div class="field">
    <div class="ui left icon input">
      <i class="lock icon"></i>
      <%=form.text_field :password, placeholder: "Password" %>
    </div>
  </div>

  <div class="field">
    <div class="ui left icon input">
      <i class="lock icon"></i>
      <%=form.text_field :password_confirmation, placeholder: "Confirm Password" %>
    </div>
  </div>

  <div class="field">
    <div class="ui left input">
      <%=form.text_field :email, placeholder: "Email" %>
    </div>
  </div>

  <%= form.submit :class => "ui fluid large teal submit button"%>

<% end %>
  </div>
</div>
